<div class="modal @ModalDisplay" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@TitleContent</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="() => CloseModal.Invoke()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>

        </div>
    </div>
</div>

@code {
    [Parameter] public RenderFragment? TitleContent { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool ShowModal { get; set; }
    [Parameter] public Action? CloseModal { get; set; }

    private string ModalDisplay => ShowModal ? "show" : "";

    private string ShowModalDisplay()
    {
        var res = ShowModal ? "show" : "";
        StateHasChanged();
        return res;
    }

}